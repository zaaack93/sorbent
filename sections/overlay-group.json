{
  "type": "custom.overlay",
  "name": "Overlay group",
  "sections": {
    "newsletter-popup": {
      "type": "newsletter-popup",
      "settings": {
        "apparition_delay": 10,
        "show_only_on_index": true,
        "show_only_for_visitors": false,
        "show_only_once": true,
        "title": "Subscribe to the Sorbent Scoop",
        "button_text": "Subscribe",
        "subtext": "Be the first to know: exclusive offers, hilarious bathroom chronicles, and more delivered straight to your inbox!"
      }
    },
    "privacy-banner": {
      "type": "privacy-banner",
      "settings": {
        "privacy_bar_title": "Cookie policy",
        "privacy_bar_content": "<p>We use cookies and similar technologies to provide the best experience on our website. Refer to our Privacy Policy for more information.<\/p>"
      }
    },
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_cart_note": true,
        "show_shipping_text": true,
        "show_view_cart_button": true,
        "show_checkout_button": true,
        "recommendations_title": "Trending this month",
        "products": [

        ],
        "product_card_background": "#f2f2f2",
        "product_card_text_color": ""
      }
    },
    "search-drawer": {
      "type": "search-drawer",
      "settings": {
        "full_width": false,
        "show_article_category": true,
        "search_menu": "new-main",
        "search_menu_show_title": false
      }
    }
  },
  "order": [
    "newsletter-popup",
    "privacy-banner",
    "cart-drawer",
    "search-drawer"
  ]
}